<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E3F99"
    tools:context=".city_o_Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/iv"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/o_03" />

        <TextView
            android:id="@+id/welcome_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="Select City"
            android:textColor="#fff"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/s_text"
            android:layout_width="231dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/welcome_txt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="Enter Your Current City name provide Fast Service"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="12sp" />

        <EditText

            android:id="@+id/et_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/s_text"
            android:layout_marginHorizontal="27dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/ic_white_et_bg"
            android:drawableRight="@drawable/ic_location"
            android:hint="City"
            android:paddingStart="30dp"
            android:paddingRight="20dp" />

        <TextView
            android:id="@+id/select_city_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_city"
            android:layout_marginHorizontal="27dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/ic_red_bg"
            android:gravity="center"
            android:paddingStart="10dp"
            android:text="Next"
            android:textAlignment="gravity"
            android:textColor="@color/white" />
    </RelativeLayout>

</ScrollView>